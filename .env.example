# Configuração de exemplo - copie para .env e configure com suas credenciais

# Chave da API do Google Gemini
# Obtenha em: https://ai.google.dev/
GEMINI_API_KEY=sua_chave_api_aqui

# Porta do servidor (opcional, padrão: 8000)
PORT=8000

# Host do servidor (opcional, padrão: 0.0.0.0)
HOST=0.0.0.0

# Modelo Whisper a ser usado (opcional, padrão: tiny)
# Opções: tiny, base, small, medium, large
WHISPER_MODEL=tiny

# Dispositivo para Whisper (opcional, auto-detecta GPU)
# Opções: auto, cpu, cuda
WHISPER_DEVICE=auto

# Diretório temporário para arquivos (opcional)
TEMP_DIR=./temp

# Timeout para download de vídeos em segundos (opcional, padrão: 300)
DOWNLOAD_TIMEOUT=300

# Timeout para transcrição em segundos (opcional, padrão: 600)
TRANSCRIPTION_TIMEOUT=600

# Qualidade do áudio extraído (opcional, padrão: 192)
AUDIO_QUALITY=192

# Ativar logs detalhados (opcional, padrão: false)
DEBUG=false
